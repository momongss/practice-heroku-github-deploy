extends layouts/main
include mixins/nav
include mixins/arrowButton
include mixins/iconButton

block css
  link(rel="stylesheet", href="/stylesheets/initPage.css")

block title
  title= 'My 배민'

block script
  script(type='module' src='/javascripts/init.js')

block content
  header
    nav
      + nav({ title: 'My배민' })
    img.banner-img(src='/images/banner.png' alt='banner')
  main.init-page-main
    -if (dispname) {
      .welcome-area
        img.icon-img(src=`/images/profile.png` alt='icon')
        span
          span.point #{dispname}
          |  님, 안녕하세요!
    -} else {
      .login-btn
        + arrowButton({
          iconSrc: '/profile.png',
          title: '로그인해주세요',
          titleColor: 'grey',
          big: true,
        })
    -}
    .grid
      + iconButton({ iconSrc: '/point.png', desc: '포인트' })  
      + iconButton({ iconSrc: '/coupon.png', desc: '쿠폰함' })
      + iconButton({ iconSrc: '/gift.png', desc: '선물함' })
      + iconButton({ iconSrc: '/like.png', desc: '찜' })
      + iconButton({ iconSrc: '/order.png', desc: '주문내역' })
      + iconButton({ iconSrc: '/review.png', desc: '리뷰관리' })
    .campaign
      + arrowButton({
        iconSrc: '/leaf.png',
        title: '일회용품 덜 쓰기, 함께해요!',
        titleColor: 'green',
      })
    .list
      + arrowButton({
        title: '배민페이 등록',
        desc: '배민페이로 결제하면 최대 5.5% 배민포인트가 적립됩니다!',
        isNew: true,
      })
      + arrowButton({
        title: '가족계정 관리',
        desc: '결제수단을 공유해 우리 가족의 끼니를 챙겨주세요.',
        isNew: true,
      })
      + arrowButton({
        title: '공지사항'
      })
      + arrowButton({
        title: '배민커넥트 지원'
      })